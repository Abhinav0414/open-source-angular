/* GLOBALS */
body, html
  height: 100%

app-root
  display: block
  height: 100%

.mat-typography
  h1, h2, h3, h4, h5, h6
    font-weight: 700
    margin-bottom: 10px

  h2
    color: #0a253a
    font-family: Poppins,sans-serif
    margin-top: 20px
    margin-bottom: 10px
    font-size: 32px
    font-weight: 600
    line-height: 36px

  h3
    color: #0a253a
    font-family: Poppins,sans-serif
    font-size: 32px
    font-weight: 700
    line-height: 1.2em
    margin-top: 24px
    margin-bottom: 12px
    text-align: center

    &:after
      content: ''
      display: block
      width: 124px
      height: 8px
      margin: 12px auto 24px
      background-color: #38B87C
      text-align: left

    &.compact
      font-size: 24px

      &:after
        height: 4px

  h4
    color: #0a253a
    font-family: Poppins,sans-serif
    font-size: 24px
    font-weight: 700
    line-height: 1.2em
    margin-top: 12px
    margin-bottom: 8px
    text-align: left

a
a:visited
  color: #38B87C

a:hover
  color: #1B8352

p
  color: #485c6c
  font-size: 16px
  line-height: 175%
  margin-top: 16px
  margin-bottom: 16px

li
  color: #485c6c

var
  background: lightpink
  color: purple
  font-style: normal
  padding: 0 2px

form
  width: 100%

/* LAYOUT */
.hidden
  display: none !important
