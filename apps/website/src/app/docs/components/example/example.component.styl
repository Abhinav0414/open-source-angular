:host  {
  display: block;
  margin: 0 0 24px 0;

  app-docs-viewer  {
    background: #1e1e1e;
    overflow: hidden;
  }
}



.docs-example-viewer-wrapper  {
  border: 1px solid rgba(0, 0, 0, 0.2);
  border-radius: 4px;
  margin: 24px 0;
  h3  {
    margin-top: 10px;
  }
}



.docs-example-viewer-title  {
  align-content: center;
  align-items: center;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  padding: 8px 8px 8px 16px;
}


.docs-example-viewer-title-spacer  {
  flex: 1 1 auto;
}


.docs-example-viewer-body  {
  padding: 30px;
}


.button-bar  {
  color: #fff;
  position: absolute;
  padding: 8px;
  right: 0;
}


code-snippet  {
  padding: 20px;
}


.docs-example-source  {
  // TODO(annieyw): remove when standalone snippets are removed
  padding: 0;
  margin: 0;
  border: none;
  background: none;
}
