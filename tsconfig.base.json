{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@myndpm/demos": ["libs/demos/index.ts"],
      "@myndpm/dyn-forms": ["libs/forms/index.ts"],
      "@myndpm/dyn-forms/*": ["libs/forms/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
