{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2018", "dom"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@myndpm/demos/*": ["dist/libs/demos/*", "libs/demos/*"],
      "@myndpm/demos": ["dist/libs/demos", "libs/demos/index.ts"],
      "@myndpm/dyn-forms": ["dist/libs/forms", "libs/forms/index.ts"],
      "@myndpm/dyn-forms/logger": ["dist/libs/forms/logger", "libs/forms/logger"],
      "@myndpm/dyn-forms/core": ["dist/libs/forms/core", "libs/forms/core"],
      "@myndpm/dyn-forms/ui-material": ["dist/libs/forms/ui-material", "libs/forms/ui-material"],
      "@myndpm/dyn-forms/ui-native": ["dist/libs/forms/ui-native", "libs/forms/ui-native"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
