{
  "version": 1,
  "cli": {
    "defaultCollection": "@nrwl/angular"
  },
  "defaultProject": "demos",
  "schematics": {
    "@nrwl/angular:application": {
      "style": "styl",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nrwl/angular:library": {
      "style": "styl",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "strict": true
    },
    "@nrwl/angular:storybook-configuration": {
      "linter": "eslint"
    },
    "@schematics/angular:component": {
      "style": "styl",
      "changeDetection": "OnPush"
    }
  },
  "projects": {
    "demos": {
      "projectType": "application",
      "root": "apps/demos",
      "sourceRoot": "apps/demos/src",
      "prefix": "open-source",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/apps/demos",
            "index": "apps/demos/src/index.html",
            "main": "apps/demos/src/main.ts",
            "polyfills": "apps/demos/src/polyfills.ts",
            "tsConfig": "apps/demos/tsconfig.app.json",
            "aot": true,
            "assets": [
              "apps/demos/src/favicon.jpg",
              "apps/demos/src/assets"
            ],
            "styles": [
              "node_modules/bootstrap/dist/css/bootstrap.min.css",
              "apps/demos/src/material.scss",
              "apps/demos/src/styles.styl"
            ],
            "scripts": [
              "node_modules/bootstrap/dist/js/bootstrap.min.js"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "apps/demos/src/environments/environment.ts",
                  "with": "apps/demos/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "demos:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "demos:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "demos:build"
          }
        },
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "apps/demos/src/**/*.ts",
              "apps/demos/src/**/*.html"
            ]
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "outputs": [
            "coverage/apps/demos"
          ],
          "options": {
            "jestConfig": "apps/demos/jest.config.js",
            "passWithNoTests": true
          }
        },
        "deploy": {
          "builder": "angular-cli-ghpages:deploy",
          "options": {
            "baseHref": "/open-source/",
            "name": "Mynd Frontend Team",
            "email": "eng.frontend@mynd.co",
            "cname": "false"
          }
        }
      }
    },
    "demos-e2e": {
      "root": "apps/demos-e2e",
      "sourceRoot": "apps/demos-e2e/src",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@nrwl/cypress:cypress",
          "options": {
            "cypressConfig": "apps/demos-e2e/cypress.json",
            "tsConfig": "apps/demos-e2e/tsconfig.e2e.json",
            "devServerTarget": "demos:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "demos:serve:production"
            }
          }
        },
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "apps/demos-e2e/**/*.{js,ts}"
            ]
          }
        }
      }
    },
    "forms": {
      "projectType": "library",
      "root": "libs/forms",
      "sourceRoot": "libs/forms/src",
      "prefix": "dyn",
      "architect": {
        "build": {
          "builder": "@nrwl/angular:package",
          "options": {
            "tsConfig": "libs/forms/tsconfig.lib.json",
            "project": "libs/forms/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "libs/forms/tsconfig.lib.prod.json"
            }
          }
        },
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "libs/forms/src/**/*.ts",
              "libs/forms/src/**/*.html"
            ]
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "outputs": [
            "coverage/libs/forms"
          ],
          "options": {
            "jestConfig": "libs/forms/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    }
  }
}
