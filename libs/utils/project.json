{
  "name": "utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/utils/src",
  "projectType": "library",
  "targets": {
    "prebuild": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/utils",
        "tsConfig": "libs/utils/tsconfig.lib.json",
        "packageJson": "libs/utils/package.json",
        "main": "libs/utils/src/index.ts",
        "assets": ["libs/utils/*.md"],
        "deleteOutputPath": false
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "yarn nx run utils:prebuild",
          "rimraf dist/libs/utils/node_modules/rxjs"
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/utils/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/utils"],
      "options": {
        "jestConfig": "libs/utils/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "baseBranch": "master",
        "preset": "angular",
        "tagPrefix": "@myndpm/utils@",
        "commitMessageFormat": "ci: release @myndpm/utils@${version}",
        "postTargets": ["utils:npm"]
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "npm": {
      "executor": "./dist/plugin:deploy-npm",
      "options": {
        "copy": true,
        "registry": "https://registry.npmjs.org",
        "outputTarget": "prebuild",
        "target": "build"
      }
    }
  },
  "tags": ["shared"]
}
